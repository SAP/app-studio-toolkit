{
  "name": "vscode-dependencies-validation",
  "displayName": "vscode-dependencies-validation",
  "private": true,
  "description": "Displays dependency issues in problems view and marks relevant lines in package.json files",
  "version": "1.3.2",
  "license": "Apache-2.0",
  "publisher": "SAPOSS",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Dependencies Validation",
      "properties": {
        "dependenciesValidation.enableAutoFix": {
          "type": "boolean",
          "default": true,
          "description": "Enables automatic dependencies misalignment fixing"
        },
        "dependenciesValidation.delayAutoFix": {
          "type": "number",
          "default": 0,
          "description": "Delays automatic dependencies misalignment fixing on startup (seconds)"
        }
      }
    }
  },
  "scripts": {
    "ci": "npm-run-all clean compile coverage bundle",
    "clean": "rimraf ./dist *.vsix",
    "compile": "tsc -p ./",
    "test": "mocha",
    "coverage": "nyc mocha",
    "bundle": "webpack --mode production",
    "package": "node ./scripts/package-vsix.js"
  },
  "dependencies": {
    "@sap-devx/npm-dependencies-validation": "^1.3.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0",
    "proxyquire": "2.1.3"
  }
}
