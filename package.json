{
	"name": "app-studio-toolkit",
	"displayName": "App-Studio-Toolkit Extension",
	"description": "SAP Business Application Studio Toolkit extension",
	"version": "0.0.8",
	"publisher": "SAPOSS",
	"license": "Apache-2.0",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.44.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/SAP/app-studio-toolkit"
	},
	"categories": [
		"Other"
	],
	"main": "./out/src/extension.js",
	"types": "./out/src/api",
	"activationEvents": [
		"*"
	],
	"contributes": {
		"configuration": {
			"properties": {
				"actions": {
					"type": "array"
				},
				"app-studio-toolkit.logging.level": {
					"type": "string",
					"enum": [
						"off",
						"fatal",
						"error",
						"warn",
						"info",
						"debug",
						"trace"
					],
					"default": "error",
					"description": "The verbosity of logging. The Order is off < fatal < error < warn < info < debug < trace.",
					"scope": "window"
				},
				"app-studio-toolkit.logging.sourceLocationTracking": {
					"type": "boolean",
					"default": false,
					"description": "Should Source Code Location Info be added to log entries, DANGER - May be very slow, only use in debugging scenarios",
					"scope": "window"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "nyc mocha --no-parallel",
		"lint": "eslint . --ext .ts,.tsx --cache",
		"lint:fix": "eslint . --ext .ts,.tsx --cache --fix",
		"package": "vsce package ."
	},
	"dependencies": {
		"@vscode-logging/wrapper": "^1.0.0",
		"lodash": "4.17.21",
		"optional-require": "^1.0.3"
	},
	"devDependencies": {
		"@commitlint/cli": "12.0.1",
		"@commitlint/config-conventional": "12.0.1",
		"@types/chai": "^4.2.14",
		"@types/sinon": "^9.0.10",
		"@types/lodash": "^4.14.165",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.25",
		"@types/vscode": "^1.40.0",
		"@typescript-eslint/eslint-plugin": "^4.17.0",
		"@typescript-eslint/parser": "^4.17.0",
		"chai": "^4.3.0",
		"chai-as-promised": "^7.1.1",
		"sinon": "^9.2.4",
		"eslint": "^7.21.0",
		"eslint-config-prettier": "^8.1.0",
		"husky": "4.3.8",
		"mocha": "^8.2.1",
		"ts-node": "^9.1.1",
		"nyc": "^15.1.0",
		"typescript": "^4.1.3",
		"vsce": "^1.69.0",
		"vscode-test": "^1.2.2",
		"coveralls": "2.11.16",
		"@vscode-logging/types": "0.1.3",
		"mock-require": "^3.0.3"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}
