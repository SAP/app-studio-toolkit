{
	"name": "app-studio-toolkit",
	"displayName": "App-Studio-Toolkit Extension",
	"description": "SAP Business Application Studio Toolkit extension",
	"version": "0.0.3",
	"publisher": "SAPOSS",
	"license": "Apache-2.0",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.44.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/SAP/app-studio-toolkit"
	},
	"categories": [
		"Other"
	],
	"main": "./out/src/extension.js",
	"types": "./out/src/api",
	"activationEvents": [
		"*"
	],
	"contributes": {
		"configuration": {
			"title": "Actions",
			"properties": {
				"actions": {
					"type": "array"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "nyc mocha -p tsconfig.json --recursive --no-parallel tests/**/*.spec.ts",
		"lint": "eslint . --ext .ts,.tsx --cache",
		"lint:fix": "eslint . --ext .ts,.tsx --cache --fix",
		"package": "vsce package ."
	},
	"dependencies": {
		"lodash": "^4.17.20"
	},
	"devDependencies": {
		"@commitlint/cli": "12.0.1",
		"@commitlint/config-conventional": "11.0.0",
		"@types/chai": "^4.2.14",
		"@types/sinon": "^9.0.10",
		"@types/lodash": "^4.14.165",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.25",
		"@types/vscode": "^1.40.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"chai": "^4.3.0",
		"chai-as-promised": "^7.1.1",
		"sinon": "^9.2.4",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"husky": "4.3.8",
		"mocha": "^8.2.1",
		"ts-node": "^9.1.1",
		"nyc": "^15.1.0",
		"typescript": "^4.1.3",
		"vsce": "^1.69.0",
		"vscode-test": "^1.2.2",
		"coveralls": "2.11.16"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}
